<div class="col s12 m12">
  <div class="icon-block">
    <h2 class="center brown-text"><i class="material-icons">group</i></h2>

    <div style="text-align: center;vertical-align: middle;line-height: 90px;">
      <h5><%= @group.name %></h5>
      <h6>Books: Past, Present, and Future</h6>
    </div>
  </div>
</div>

<div class='row'>
  <div class="col s12">
    <div">
      <ul>
        <% @selected_books.each do |book| %>
          <% book_suggestion = BookSuggestion.find_by(isbn: book.isbn) %>
          <li style='margin-top:30px'>
            <span class="title"><u><%= Date::MONTHNAMES[book.month] %>, <%= book.year %></u></span>
            <p style='margin-left: 15px'>
              <img src="<%= book_suggestion.image_url %>" alt="" width='35px'>  <%= link_to book_suggestion.title, "/books/#{book.isbn}" %><br/>
              <% if book.meeting %>
                Meeting: <%= link_to book.meeting.location, "/meetings/#{book.meeting.id}" %>
              <% else %>
                Meeting: None scheduled
              <% end %>
            </p>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
