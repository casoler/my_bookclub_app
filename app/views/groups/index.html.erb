<div class="col s12 m12">
  <div class="icon-block">
    <h2 class="center brown-text"><i class="material-icons">group</i></h2>

    <div style="text-align: center;vertical-align: middle;line-height: 90px;">
      <h5>Book Clubs</h5>
    </div>

    <div class='row'>
      <h6><b>My Book Clubs:</b></h6>
      <table class="striped highlight"> 
        <thead>
          <tr>
            <th>Name</th>
            <th>About</th>
            <th>Genres</th>
            <th>Locations</th>
          </tr>
        </thead>
        <tbody>
          <% @my_groups.each do |group| %>
            <tr>
              <td><%= link_to group.name, "/groups/#{group.id}" %></td>
              <td><%= group.about %></td>
              <td><%= group.genres.collect{|genre| genre.genre}.join(", ") %></td>
              <td><%= group.city %>, <%= group.state %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class='row' style="margin-top:50px;">
      <h6><b>Other Book Clubs:</b></h6>
      <table class="striped highlight"> 
        <thead>
          <tr>
            <th>Name</th>
            <th>About</th>
            <th>Genres</th>
            <th>Locations</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @other_groups.each do |group| %>
            <tr>
              <td><%= group.name %></td> 
              <td><%= group.about %></td>
              <td><%= group.genres.collect{|genre| genre.genre}.join(", ") %></td>
              <td><%= group.city %>, <%= group.state %></td>
              <td><%= link_to('Join', "/groups/#{group.id}/add_member", method: :post) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class='row' style="margin-top:50px;">
      <%= link_to 'Create a New Group', "/groups/new" %>
    </div>
  </div>
</div>

